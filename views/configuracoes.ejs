<div class="max-w-4xl mx-auto p-8 bg-white shadow-xl rounded-lg mt-8 border-t-4 border-blue-600">
    <h1 class="text-3xl font-bold mb-6 text-center text-blue-900">Configurações</h1>

    <% if (messages && messages.length) { %>
        <% messages.forEach(({ category, message }) => { %>
            <% if (category === 'danger') { %>
                <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                    <%= message %>
                </div>
            <% } %>
        <% }); %>
    <% } %>

    <form method="POST" class="space-y-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">UMP/Federação ou Sinodal:</label>
                <input type="text" name="ump_federacao" value="<%= config ? config.ump_federacao : '' %>" required class="input-field">
            </div>

            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">Federação/Sínodo:</label>
                <input type="text" name="federacao_sinodo" value="<%= config ? config.federacao_sinodo : '' %>" required class="input-field">
            </div>

            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">Ano Vigente:</label>
                <input type="number" name="ano_vigente" value="<%= config ? config.ano_vigente : '' %>" required class="input-field">
            </div>

            <div class="w-full">
                <label class="block text-sm font-semibold text-gray-800">Sócios Ativos:</label>
                <input type="number" name="socios_ativos" value="<%= config ? config.socios_ativos : '' %>" required class="input-field">
            </div>

            <div class="w-full">
                <label class="block text-sm font-semibold text-gray-800">Sócios Cooperadores:</label>
                <input type="number" name="socios_cooperadores" value="<%= config ? config.socios_cooperadores : '' %>" required class="input-field">
            </div>

            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">Tesoureiro Responsável:</label>
                <input type="text" name="tesoureiro_responsavel" value="<%= config ? config.tesoureiro_responsavel : '' %>" required class="input-field">
            </div>

            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">Saldo Inicial:</label>
                <input type="number" name="saldo_inicial" step="0.01" value="<%= config ? config.saldo_inicial : '' %>" required class="input-field">
            </div>

            <div class="sm:col-span-2 w-full">
                <label class="block text-sm font-semibold text-gray-800">E-mail:</label>
                <input type="email" name="email" value="<%= config ? config.email : '' %>" required class="input-field">
            </div>
        </div>

        <div class="mt-6">
            <button type="submit" class="w-full py-3 px-4 bg-blue-600 text-white font-semibold rounded-lg shadow-md hover:bg-blue-700 transition-all">
                Salvar Configurações
            </button>
        </div>
    </form>
</div>

<style>
    .input-field {
        width: 100%;
        max-width: 500px;
        padding: 10px;
        border: 1px solid #cbd5e0;
        border-radius: 6px;
        outline: none;
        transition: border 0.2s, box-shadow 0.2s;
    }

    .input-field:focus {
        border-color: #4c51bf;
        box-shadow: 0 0 6px rgba(76, 81, 191, 0.3);
    }
</style>

<!-- Modal de Sucesso -->
<% if (messages.success) { %>
  <div id="success-modal" class="fixed inset-0 flex items-center justify-center z-50 bg-gray-900 bg-opacity-50 animate-fade-in">
      <div class="bg-white p-6 rounded-xl shadow-xl max-w-sm w-full animate-pop-in">
          <div class="flex justify-between items-center mb-4">
              <h2 class="text-xl font-semibold text-green-700 flex items-center">
                  <span class="mr-2">✅</span> Sucesso!
              </h2>
              <button onclick="document.getElementById('success-modal').style.display='none'" class="text-gray-500 hover:text-gray-700 text-2xl">
                  ×
              </button>
          </div>
          <p class="text-gray-700"><%= messages.success %></p>
          <div class="mt-6 flex justify-end">
              <a href="/" class="bg-gradient-to-r from-green-600 to-green-700 text-white py-2 px-4 rounded-lg hover:from-green-700 hover:to-green-800 transition-all duration-200">
                  Ok
              </a>
          </div>
      </div>
  </div>
  <script>
      setTimeout(function() {
          document.getElementById('success-modal').style.display = 'flex';
      }, 200);
  </script>
<% } %>