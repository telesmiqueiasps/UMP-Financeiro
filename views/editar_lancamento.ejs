
<div class="max-w-5xl mx-auto mt-12 bg-white p-8 rounded-xl shadow-xl border-t-4 border-green-600">
    
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-8">
        Editar Lançamento
    </h1>

    <form method="POST" enctype="multipart/form-data" class="space-y-6">
        <!-- Data -->
        <div>
            <label for="data" class="block text-lg font-semibold text-gray-700">Data:</label>
            <input type="date" name="data" value="<%= lancamento.data %>" class="w-full lg:w-[600px] p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" required>
        </div>

        <!-- Tipo -->
        <div>
            <label for="tipo" class="block text-lg font-semibold text-gray-700">Tipo:</label>
            <select name="tipo" class="w-full lg:w-[600px] p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" required>
                <option value="Outras Receitas" <%= lancamento.tipo === 'Outras Receitas' ? 'selected' : '' %>>Outras Receitas</option>
                <option value="Outras Despesas" <%= lancamento.tipo === 'Outras Despesas' ? 'selected' : '' %>>Outras Despesas</option>
                <option value="ACI Recebida" <%= lancamento.tipo === 'ACI Recebida' ? 'selected' : '' %>>ACI Recebida</option>
                <option value="ACI Enviada" <%= lancamento.tipo === 'ACI Enviada' ? 'selected' : '' %>>ACI Enviada</option>
            </select>
        </div>

        <!-- Descrição -->
        <div>
            <label for="descricao" class="block text-lg font-semibold text-gray-700">Descrição:</label>
            <input type="text" name="descricao" value="<%= lancamento.descricao %>" class="w-full lg:w-[600px] p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" required>
        </div>

        <!-- Valor -->
        <div>
            <label for="valor" class="block text-lg font-semibold text-gray-700">Valor:</label>
            <input type="number" step="0.01" name="valor" value="<%= lancamento.valor %>" class="w-full lg:w-[600px] p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-400 focus:outline-none" required>
        </div>

        <!-- Botões -->
        <div class="flex gap-4">
            <button type="submit" class="w-full bg-green-600 text-white p-3 rounded-lg font-semibold shadow-md hover:bg-green-700 transition-all">
                Salvar Alterações
            </button>
            <a href="/mes/<%= mes %>/<%= ano %>" class="w-full text-center bg-gray-500 text-white p-3 rounded-lg font-semibold shadow-md hover:bg-gray-600 transition-all">
                <span class="block text-center">Cancelar</span>
            </a>
        </div>
    </form>
</div>

<!-- Modal de Sucesso -->
<% if (messages.success || messages.warning || messages.danger) { %>
    <div id="message-modal" class="fixed inset-0 flex items-center justify-center z-50 bg-gray-900 bg-opacity-50 animate-fade-in">
        <div class="bg-white p-6 rounded-xl shadow-xl max-w-sm w-full animate-pop-in">
            <% if (messages.success) { %>
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-green-700 flex items-center">
                        <span class="mr-2">✅</span> Sucesso!
                    </h2>
                    <button onclick="document.getElementById('message-modal').style.display='none'" class="text-gray-500 hover:text-gray-700 text-2xl">
                        ×
                    </button>
                </div>
                <p class="text-gray-700"><%= messages.success %></p>
                <div class="mt-6 flex justify-end">
                    <!-- Redirecionamento para a página correspondente ao mês e ano -->
                    <a href="/mes/<%= mes %>/<%= ano %>" class="bg-gradient-to-r from-green-600 to-green-700 text-white py-2 px-4 rounded-lg hover:from-green-700 hover:to-green-800 transition-all duration-200">
                        Ok
                    </a>
                </div>
            <% } %>
            
            <% if (messages.warning) { %>
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-yellow-600 flex items-center">
                        <span class="mr-2">⚠️</span> Aviso
                    </h2>
                    <button onclick="document.getElementById('message-modal').style.display='none'" class="text-gray-500 hover:text-gray-700 text-2xl">
                        ×
                    </button>
                </div>
                <p class="text-gray-700"><%= messages.warning %></p>
                <div class="mt-6 flex justify-end">
                    <!-- Redirecionamento para a página correspondente ao mês e ano -->
                    <a href="/mes/<%= mes %>/<%= ano %>" class="bg-gradient-to-r from-green-600 to-green-700 text-white py-2 px-4 rounded-lg hover:from-green-700 hover:to-green-800 transition-all duration-200">
                        Ok
                    </a>
                </div>
            <% } %>
            
            <% if (messages.danger) { %>
                <div class="flex justify-between items-center mb-4">
                    <h2 class="text-xl font-semibold text-red-700 flex items-center">
                        <span class="mr-2">❌</span> Erro
                    </h2>
                    <button onclick="document.getElementById('message-modal').style.display='none'" class="text-gray-500 hover:text-gray-700 text-2xl">
                        ×
                    </button>
                </div>
                <p class="text-gray-700"><%= messages.danger %></p>
                <div class="mt-6 flex justify-end">
                    <!-- Redirecionamento para a página correspondente ao mês e ano -->
                    <a href="/mes/<%= mes %>/<%= ano %>" class="bg-gradient-to-r from-green-600 to-green-700 text-white py-2 px-4 rounded-lg hover:from-green-700 hover:to-green-800 transition-all duration-200">
                        Ok
                    </a>
                </div>
            <% } %>
        </div>
    </div>

    <script>
        setTimeout(function() {
            document.getElementById('message-modal').style.display = 'flex';
        }, 200);
    </script>
<% } %>